
<p> {{link-to "Write a review" "reviews.new" class="new-link"}} </p>
<div class="reviews">
  <h2>Reviews</h2>
  {{#each model as |review|}}
    <div class="review">
      <p>
        {{review.reviewerName}} at {{moment-from-now review.reviewDate}}
      </p>
      <div class="review-content">
        <!-- <p>{{review-stars score=review.score}}</p> -->
        <p>{{review.comment}}</p>
      </div>
    </div>
  {{/each}}
</div>
